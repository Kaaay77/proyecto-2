

<div class="nameProfile">
    <div>
      <h1>Bienvenido {{user.username}}</h1>
      <h5><b>{{user.name}}</b></h5>
    </div>
    <div>
  <a class="btn btn-primary btn-block mb-4" href="/update-profile/{{user._id}}">Update profile</a>
  <a class="btn btn-primary btn-block mb-4" href="/logout">Logout</a>
    </div>
</div>

<div id="userTagInfo">
  <div class="disFlex">
    <div class="userTag">
      {{#if userTag}}
      <h3 class="center" > <b>{{userTag.name}}</b></h3>
      <div  class="userName">
      <p>Actual arena:   <b>{{userTag.arena.name}}</b></p>
      <p>Clan:   <b>{{userTag.clan.name}}</b></p>
      <p>Exp Level:   <b>{{userTag.expLevel}}</b></p>
      <p>Trophies:   <b>{{userTag.trophies}}</b></p>
      <p>Wins:   <b>{{userTag.wins}}</b></p>
      <p>Losses:   <b>{{userTag.losses}}</b></p>
      <p>Win ratio: <b>{{avg}}</b></p>
      </div>
    </div>
    <div class="center">
      <h4>Favorite card</h4>
      <img src="{{userTag.currentFavouriteCard.iconUrls.medium}}" class="img"></img> 
      <p>{{userTag.currentFavouriteCard.name}}</p>
    </div>
  </div>
  <div>
      <h3 class="center">Current Deck</h3>
  <div id="deck">
      {{#each userTag.currentDeck}}
      <div class="card">
      <img src="{{iconUrls.medium}}" class="img"></img> 
      <p>{{name}}</p>
      </div>
      {{/each}}
      {{/if}}
  </div>
  </div>
</div>

