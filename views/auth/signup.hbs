<div class="centrado">
<div class="centrado bg-login-signup">
<div class="formulario tab-pane " id="pills-register" role="tabpanel" aria-labelledby="tab-register">
    <form action="/signup" method="POST">
      <!-- Name input -->
      <div class="form-outline mb-4">
        <input type="text" name ='name' id="registerName" class="form-control text-none" />
        <label class="form-label text-none" for="registerName">Name</label>
      </div>
      <!-- Username input -->
      <div class="form-outline mb-4">
        <input type="text" name="username" id="registerUsername" class="form-control text-none" />
        <label class="form-label text-none" for="registerUsername">Username</label>
      </div>
      <!-- Tag input -->
      <div class="form-outline mb-4">
        <input type="text" name="tag" id="registerUsername" class="form-control text-none" placeholder="#"/>
        <label class="form-label text-none" for="registerUsername">Tag</label>
      </div>

      <!-- Email input -->
      <div class="form-outline mb-4">
        <input type="email" name="email" id="registerEmail" class="form-control text-none" />
        <label class="form-label text-none" for="registerEmail">Email</label>
      </div>

      <!-- Password input -->
      <div class="form-outline mb-4">
        <input type="password" name='password'id="registerPassword" class="form-control text-none" />
        <label class="form-label text-none" for="registerPassword">Password</label>
      </div>

      <!-- Repeat Password input -->
      <div class="form-outline mb-4">
        <input type="password" name= "passwordRepeat" id="registerRepeatPassword" class="form-control text-none" />
        <label class="form-label text-none" for="registerRepeatPassword">Repeat password</label>
      </div>
      <!-- Submit button -->
      <button type="submit" class="btn btn-dark btn-block mb-3 buttonBackground gold">Sign in</button>
    </form>
{{#if errorMessage}}
<p class="error text-none">{{errorMessage}}</p>
{{/if}}
  </div>

</div>
{{#if errorMessage}}
<img class="gif-error" src="../../images/hog.gif">
{{/if}}
</div>
   
