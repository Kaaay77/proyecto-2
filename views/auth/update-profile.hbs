<div class="tab-pane " id="pills-register" role="tabpanel" aria-labelledby="tab-register">
    <form action="/update-profile/{{response._id}}" method="POST">

      <!-- Name input -->
      <div class="form-outline mb-4">
        <input type="text" name='name' id="registerName" class="form-control" value="{{response.name}}"/>
        <label class="form-label" for="registerName">Name</label>
      </div>

      <!-- Username input -->
      <div class="form-outline mb-4">
        <input type="text" name="username" id="registerUsername" class="form-control" value="{{response.username}}" />
        <label class="form-label" for="registerUsername">Username</label>
      </div>

     <!-- Tag input -->
      <div class="form-outline mb-4">
        <input type="text" name="tag" id="registerUsername" class="form-control"  value="{{response.tag}}" placeholder="#"/>
        <label class="form-label" for="registerUsername">Tag</label>
      </div>

      <!-- Old Password  -->   
      <div class="form-outline mb-4">
        <input type="password" name='password'id="registerPassword" class="form-control" />
        <label class="form-label" for="registerPassword">New Password</label>
      </div>

